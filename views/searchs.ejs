<%- include("partials/header"); -%>
    
    <section class="cardsContainers">
        <% for(var i=0; i < 10; i++){ %>
            <article  class="movieCard">
                
                <div class="infoContainer">
                    <h2><%= moviesFounded[i].Title %></h2>
                    <p id="text">Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ipsam earum tempore eum facere dolor rerum suscipit corrupti consequuntur asperiores molestias nobis omnis.
                    </p>

                    <div class="btnsContainer">
                        <form action="/btnFavs" method="post">
                            <button id="favs" type="submit" name="favBtn" value="<%= JSON.stringify(moviesFounded[i]) %>">
                                <i class="fa-regular fa-heart"></i>
                                <label for="" id="text">Add to favourites</label>
                            </button>
                        </form>

                        <form action="/btnWTS" method="post">
                            <button id="favs" type="submit" name="favBtn" value="<%= JSON.stringify(moviesFounded[i]) %>">
                                <i class="fa-regular fa-eye"></i>
                                <label for="" id="text">Want to see</label>
                            </button>
                        </form>
                    </div>
                    
                </div>

                <div class="imgContainer">
                    <img src="<%= moviesFounded[i].Poster %>" alt="moviePhoto">
                </div>
            </article>
        <% } %>
    </section>
    

<%- include("partials/footer"); -%>
